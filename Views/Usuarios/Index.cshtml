@model IEnumerable<MeuCRUD.Models.Entidades.Usuario>




@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form class="form-group input-group" asp-action="Index" asp-controller="Usuarios" method="get">
    <input class="mr-2 form-control" type="text" name="search" placeholder="Nome" value="@ViewBag.search" />
    <div class="input-group-btn">
        <button class="btn btn-info">
            <img src="~/image/search.png" />
        </button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Imagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img class="rounded-circle" src="@("data:image/png;base64,"+Convert.ToBase64String(item.Imagem.Imagem))" asp-append-version="true" width="43px" height="43px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Idade)
                </td>
                <td>
                    @if (item.Tipo == 1)
                    {
                        <label>Administrador</label>
                    }
                    else
            if (item.Tipo == 2)
                    {
                        <label>Técnico</label>
                    }
                    else
            if (item.Tipo == 3)
                    {
                        <label>Usuário Normal</label>
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>
